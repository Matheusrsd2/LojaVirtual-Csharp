<form asp-action="CadastroCliente" asp-controller="Home" method="post">
    <main role="main">

        <section class="container" style="margin-top: 50px">
            <div class="row">
                <aside class="col-sm-6">
                    <h3 class="subtitle-doc">
                        Cadastro cliente
                    </h3>
                    <div id="code_register_1">
                        <div class="card">
                            <header class="card-header">
                                <a asp-controller="Home" asp-action="Login" class="float-right btn btn-outline-primary mt-1">Entrar</a>
                                <h4 class="card-title mt-2">Cadastro</h4>
                            </header>
                            <article class="card-body">
                                @if (TempData["MSG_S"] != null)
                                {
                                    <p class="alert alert-success">@TempData["MSG_S"]</p>
                                }
                                <div class="form-row">
                                    <div class="col form-group">
                                        <label Nome>Nome</label>
                                        <input type="text" name="nome" class="form-control" placeholder="">
                                        
                                    </div>
                                    <div class="col form-group">
                                        <label Nascimento>Nascimento</label>
                                        <input type="text" name="Nascimento" class="form-control" placeholder="">
                                        
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" name="Sexo" value="M">
                                        <span class="form-check-label"> Masculino </span>
                                    </label>
                                    <label class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" name="Sexo" value="F">
                                        <span class="form-check-label"> Feminino</span>
                                    </label>
                                    
                                </div>
                                <div class="form-group">
                                    <label CPF>CPF</label>
                                    <input type="text" name="CPF" class="form-control" placeholder="">
               
                                </div>
                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <label Telefone>Telefone</label>
                                        <input type="text" name="Telefone" class="form-control">
                                      
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label Email>E-mail</label>
                                    <input type="text" name="Email" class="form-control" placeholder="">
                                   
                                </div>
                                <div class="form-group">
                                    <label Senha>Senha</label>
                                    <input class="form-control" name="Senha" type="password">
                                  
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary btn-block"> Cadastrar </button>
                                </div>

                            </article>
                            <div class="border-top card-body text-center">Já tem um conta? <a asp-action="Login" asp-controller="Home">Entre</a></div>
                        </div>
                    </div>
                </aside>
            </div>
        </section>
    </main>
</form>
